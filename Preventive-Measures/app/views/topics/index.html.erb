<h1>Med Flow</h1>

<% @topics.each do |topic| %>
  <ul>
    <li><%= link_to "#{topic.title}", topic %></li>
  </ul>
<% end %>

<%= form_for @topic do |f| %>
<p>
  <%= f.label :title %><br>
  <%= f.text_field :title %>
</p>
<p>
  <%= f.label :body %><br>
  <%= f.text_area :body %>
</p>
<p>
  <%= f.submit %>
</p>
<% end %>
